{
    "version": "nightly",
    "description": "Displays thumbnails of all images found among the selected Sessions.",
    "homepage": "https://www.telerik.com/fiddler/add-ons",
    "license": "MIT",
    "suggest": {
        "fiddler": "nuke/fiddler"
    },
    "url": "https://telerik-fiddler.s3.amazonaws.com/fiddler/addons/fiddlergallerysetup.exe#dl.7z",
    "pre_install": "Remove-Item \"$dir\\`$PLUGINSDIR\" -Force -Recurse",
    "installer": {
        "script": [
            "if (Test-Path \"$(appdir fiddler $global)\\current\\Fiddler.exe\") { ",
            "Copy-Item \"$dir\\Gallery.dll\" -Destination \"$(appdir fiddler $global)\\current\\Scripts\" -ErrorAction SilentlyContinue }",
            "if (Test-Path \"$(appdir fiddler $global)\\current\\persist\") { ",
            "Copy-Item \"$dir\\Gallery.dll\" -Destination \"$(appdir fiddler $global)\\current\\persist\\Scripts\" -ErrorAction SilentlyContinue }"
        ]
    },
    "uninstaller": {
        "script": [
            "if (Test-Path \"$(appdir fiddler $global)\\current\\Fiddler.exe\") { ",
            "Remove-Item \"$(appdir fiddler $global)\\current\\Scripts\\Gallery.dll\" -ErrorAction SilentlyContinue }",
            "if (Test-Path \"$(appdir fiddler $global)\\current\\persist\") { ",
            "Remove-Item \"$(appdir fiddler $global)\\current\\persist\\Scripts\\Gallery.dll\" -ErrorAction SilentlyContinue }"
        ]
    }
}
