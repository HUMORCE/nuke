{
    "homepage": "https://www.telerik.com/fiddler/add-ons",
    "description": "Compare two traffic profiles",
    "version": "nightly",
    "license": "MIT",
    "suggest": {
        "fiddler": "nuke/fiddler"
    },
    "url": "https://telerik-fiddler.s3.amazonaws.com/fiddler/addons/fiddlersazdiffsetup.exe#dl.7z",
    "pre_install": [
        "Remove-Item \"$dir\\`$PLUGINSDIR\" -Force -Recurse"
    ],
    "installer": {
        "script": [
            "if (Test-Path \"$(appdir fiddler $global)\\current\\Fiddler.exe\") { ",
            "Copy-Item \"$dir\\Differ.dll\" -Destination \"$(appdir fiddler $global)\\current\\Scripts\" -ErrorAction SilentlyContinue }",
            "if (Test-Path \"$(appdir fiddler $global)\\current\\persist\") { ",
            "Copy-Item \"$dir\\Differ.dll\" -Destination \"$(appdir fiddler $global)\\current\\persist\\Scripts\" -ErrorAction SilentlyContinue }"
        ]
    },
    "uninstaller": {
        "script": [
            "if (Test-Path \"$(appdir fiddler $global)\\current\\Fiddler.exe\") { ",
            "Remove-Item \"$(appdir fiddler $global)\\current\\Scripts\\Differ.dll\" -ErrorAction SilentlyContinue }",
            "if (Test-Path \"$(appdir fiddler $global)\\current\\persist\") { ",
            "Remove-Item \"$(appdir fiddler $global)\\current\\persist\\Scripts\\Differ.dll\" -ErrorAction SilentlyContinue }"
        ]
    }
}
