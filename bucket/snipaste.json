{
    "version": "2.8.6-Beta",
    "description": "Snip & Paste, a simple but powerful snipping tool",
    "homepage": "https://www.snipaste.com/",
    "license": "Freeware",
    "suggest": {
        "vcredist": "extras/vcredist2022"
    },
    "architecture": {
        "64bit": {
            "url": "https://bitbucket.org/liule/snipaste/downloads/Snipaste-2.8.6-Beta-x64.zip",
            "hash": "sha1:6571effec87dfd36c5f54f7f33f0dd8ed976b0e4"
        },
        "32bit": {
            "url": "https://bitbucket.org/liule/snipaste/downloads/Snipaste-2.8.6-Beta-x86.zip",
            "hash": "sha1:5c728ac5a975826deb8c3f3a490c05bff2eefb20"
        }
    },
    "pre_install": [
        "if (Test-Path \"$persist_dir\\config.ini\") { Copy-Item \"$persist_dir\\config.ini\" \"$dir\" -Force }",
        "else { Set-Content \"$dir\\config.ini\" '' -Encoding ASCII }"
    ],
    "pre_uninstall": "Copy-Item \"$dir\\config.ini\" \"$persist_dir\" -Force",
    "shortcuts": [
        [
            "Snipaste.exe",
            "Snipaste"
        ]
    ],
    "persist": "history",
    "checkver": {
        "url": "https://dl.snipaste.com/sha-1.txt",
        "regex": "Snipaste-([\\d.]+\\-?(Beta)?)-x(64|86)\\.zip"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://bitbucket.org/liule/snipaste/downloads/Snipaste-$version-x64.zip",
                "hash": {
                    "url": "https://dl.snipaste.com/sha-1.txt",
                    "regex": "$sha1.*?x64.zip"
                }
            },
            "32bit": {
                "url": "https://bitbucket.org/liule/snipaste/downloads/Snipaste-$version-x86.zip",
                "hash": {
                    "url": "https://dl.snipaste.com/sha-1.txt",
                    "regex": "$sha1.*?x86.zip"
                }
            }
        }
    }
}
