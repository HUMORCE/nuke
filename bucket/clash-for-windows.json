    "pre_install": "\"New-NetFirewallRule -DisplayName '(Scoop) Allow Clash Premium - $version' -Direction Inbound -Action Allow -Program 'C:\\Users\\HUMOR\\scoop\\apps\\clash-for-windows\\$version\\resources\\static\\files\\win\\x64\\clash-win64.exe'\" | Out-File -Encoding ascii \"$dir\\allow-clash-premium.ps1\"",
