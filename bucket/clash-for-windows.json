    "architecture": {
        "64bit": {
            "url": "https://github.com/Fndroid/clash_for_windows_pkg/releases/download/0.19.20/Clash.for.Windows-0.19.20-win.7z",
            "hash": "fc0c2ccc269e152717b7b2530aca6f706f94d4699d37be4ef64d51304db1d0f4"
        },
        "32bit": {
            "url": "https://github.com/Fndroid/clash_for_windows_pkg/releases/download/0.19.20/Clash.for.Windows-0.19.20-ia32-win.7z",
