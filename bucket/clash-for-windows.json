{
    "version": "0.20.0",
    "description": "A Windows GUI based on Clash.",
    "homepage": "https://github.com/Fndroid/clash_for_windows_pkg",
    "license": "MIT",
    "notes": [
        "For TUN mode users, execute this script to import the firewall rule after install/update:",
        "'sudo $dir\\allow-clash-premium.ps1'"
    ],
    "architecture": {
        "64bit": {
            "url": "https://github.com/Fndroid/clash_for_windows_pkg/releases/download/0.20.0/Clash.for.Windows-0.20.0-win.7z",
            "hash": "bbd48d0795fe5b34b335e0cca38fbdcd4b8e149ac2b776c7f61f3240cfd434f1"
        },
        "32bit": {
            "url": "https://github.com/Fndroid/clash_for_windows_pkg/releases/download/0.20.0/Clash.for.Windows-0.20.0-ia32-win.7z",
            "hash": "fed3dd9cec83c9aa0c99daa30a13a8906dd14d56afc7388fd4847efcfa572706"
        }
    },
    "pre_install": "\"New-NetFirewallRule -DisplayName '(Scoop) Allow Clash Premium - $version' -Direction Inbound -Action Allow -Program 'C:\\Users\\HUMOR\\scoop\\apps\\clash-for-windows\\$version\\resources\\static\\files\\win\\x64\\clash-win64.exe'\" | Out-File -Encoding ascii \"$dir\\allow-clash-premium.ps1\"",
    "shortcuts": [
        [
            "Clash for Windows.exe",
            "Clash for Windows"
        ]
    ],
    "persist": "data",
    "checkver": "github",
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/Fndroid/clash_for_windows_pkg/releases/download/$version/Clash.for.Windows-$version-win.7z",
                "hash": {
                    "url": "https://github.com/Fndroid/clash_for_windows_pkg/releases/download/$version/sha256sum",
                    "regex": "^7z: $sha256"
                }
            },
            "32bit": {
                "url": "https://github.com/Fndroid/clash_for_windows_pkg/releases/download/$version/Clash.for.Windows-$version-ia32-win.7z",
                "hash": {
                    "url": "https://github.com/Fndroid/clash_for_windows_pkg/releases/download/$version/sha256sum",
                    "regex": "^ia32-7z: $sha256"
                }
            }
        }
    }
}
