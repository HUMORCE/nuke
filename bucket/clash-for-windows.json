    "architecture": {
        "64bit": {
            "url": "https://github.com/Fndroid/clash_for_windows_pkg/releases/download/0.19.18/Clash.for.Windows-0.19.18-win.7z",
            "hash": "6d74bc54c9cb9502e2879574440aafc24690dd40149cf1b4566f0a1949949a97"
        },
        "32bit": {
            "url": "https://github.com/Fndroid/clash_for_windows_pkg/releases/download/0.19.18/Clash.for.Windows-0.19.18-ia32-win.7z",
            "hash": "f6e12b0862311f289e287b1ce6f91f112d8a5263b41ecdcd23ced68144610c22"
        }
    },
    "pre_install": [
        "\"New-NetFirewallRule -DisplayName '(Scoop) Allow Clash Premium - $version' -Direction Inbound -Action Allow -Program 'C:\\Users\\HUMOR\\scoop\\apps\\clash-for-windows\\$version\\resources\\static\\files\\win\\x64\\clash-win64.exe'\" | Out-File -Encoding ascii \"$dir\\allow-clash-premium.ps1\""
    ],
    "shortcuts": [
        [
            "Clash for Windows.exe",
            "Clash for Windows"
        ]
    ],
    "persist": "data",
    "checkver": "github",
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/Fndroid/clash_for_windows_pkg/releases/download/$version/Clash.for.Windows-$version-win.7z",
                "hash": {
                    "url": "https://github.com/Fndroid/clash_for_windows_pkg/releases/download/$version/sha256sum",
                    "regex": "^7z: $sha256"
                }
            },
            "32bit": {
                "url": "https://github.com/Fndroid/clash_for_windows_pkg/releases/download/$version/Clash.for.Windows-$version-ia32-win.7z",
                "hash": {
                    "url": "https://github.com/Fndroid/clash_for_windows_pkg/releases/download/$version/sha256sum",
                    "regex": "^ia32-7z: $sha256"
                }
            }
        }
    }
}
