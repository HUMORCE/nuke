{
    "version": "2.7-Beta",
    "description": "Snip & Paste, a simple but powerful snipping tool.",
    "homepage": "https://www.snipaste.com/",
    "license": "Freeware",
    "suggest": {
        "vcredist": "extras/vcredist2015"
    },
    "architecture": {
        "64bit": {
            "url": "https://bitbucket.org/liule/snipaste/downloads/Snipaste-2.7-Beta-x64.zip",
            "hash": "sha1:a54d9dc6804e293058defe1ff1b85098f9ab603d"
        },
        "32bit": {
            "url": "https://bitbucket.org/liule/snipaste/downloads/Snipaste-2.7-Beta-x86.zip",
            "hash": "sha1:0945d572e2d276320db34d11bca5f12e2c45d6b5"
        }
    },
    "pre_install": "if (!(Test-Path \"$persist_dir\\config.ini\")) { Set-Content \"$dir\\config.ini\" '' -Encoding ASCII }",
    "persist": [
        "history",
        "config.ini"
    ],
    "shortcuts": [
        [
            "Snipaste.exe",
            "Snipaste"
        ]
    ],
    "checkver": {
        "url": "https://dl.snipaste.com/sha-1.txt",
        "regex": "\\*Snipaste-(\\d.+-Beta)-x64\\.zip"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://bitbucket.org/liule/snipaste/downloads/Snipaste-$version-x64.zip",
                "hash": {
                    "url": "https://dl.snipaste.com/sha-1.txt",
                    "regex": "$sha1.*?x64.zip"
                }
            },
            "32bit": {
                "url": "https://bitbucket.org/liule/snipaste/downloads/Snipaste-$version-x86.zip",
                "hash": {
                    "url": "https://dl.snipaste.com/sha-1.txt",
                    "regex": "$sha1.*?x86.zip"
                }
            }
        }
    }
}
