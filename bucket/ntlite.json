    },
    "architecture": {
        "64bit": {
            "url": "https://downloads.ntlite.com/files/NTLite_setup_x64.exe",
            "hash": "546a1ffbaa1fb2f2af46129c3db67bbb99b7ab1212d90c83e500c54b89b21fa4"
        },
        "32bit": {
            "url": "https://downloads.ntlite.com/files/NTLite_setup_x86.exe",
            "hash": "6e592789165498526df5bb86b01927ca26367e911cd8db267acda79cb254c098"
        }
    },
    "innosetup": true,
    "pre_install": [
        "if (!(Test-Path \"$persist_dir\\settings.xml\")) {",
        "    $settings = '<?xml version=\"1.0\" encoding=\"utf-8\"?><GeneralOptions xmlns=\"urn:schemas-nliteos-com:pn.v1\"><CheckUpdate>false</CheckUpdate><AutoUpdate>false</AutoUpdate></GeneralOptions>'",
        "    Set-Content \"$dir\\settings.xml\" $settings -Encoding Ascii",
        "}"
    ],
    "shortcuts": [
        [
            "NTLite.exe",
            "NTLite"
        ]
    ],
    "persist": [
        "Presets",
        "Updates",
        "settings.xml"
    ],
    "checkver": {
        "url": "https://www.ntlite.com/download/",
        "regex": "\\>v([\\d.]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://downloads.ntlite.com/files/NTLite_setup_x64.exe",
                "hash": {
                    "url": "https://www.ntlite.com/download/",
                    "regex": "SHA-256: $sha256"
                }
            },
            "32bit": {
                "url": "https://downloads.ntlite.com/files/NTLite_setup_x86.exe",
                "hash": {
                    "url": "https://www.ntlite.com/download/",
                    "regex": "NTLite_setup_x86.exe.*SHA-256: $sha256"
                }
            }
        }
    }
}
