{
    "version": "nightly",
    "description": "Block traffic based on URL via IAutoTamper",
    "homepage": "https://www.telerik.com/fiddler/add-ons",
    "license": "MIT",
    "suggest": {
        "fiddler": "nuke/fiddler"
    },
    "url": "https://telerik-fiddler.s3.amazonaws.com/fiddler/addons/contentblocker.zip",
    "extract_dir": "bin\\Release Signed",
    "installer": {
        "script": [
            "if (Test-Path \"$(appdir fiddler $global)\\current\\Fiddler.exe\") { ",
            "Get-ChildItem \"$dir\\*\" -Include 'ContentBlock.dll', 'ContentBlock.pdb' | Copy-Item -Destination \"$(appdir fiddler $global)\\current\\Scripts\" -ErrorAction SilentlyContinue }",
            "if (Test-Path \"$(appdir fiddler $global)\\current\\persist\") { ",
            "Get-ChildItem \"$dir\\*\" -Include 'ContentBlock.dll', 'ContentBlock.pdb' | Copy-Item -Destination \"$(appdir fiddler $global)\\current\\persist\\Scripts\" -ErrorAction SilentlyContinue }"
        ]
    },
    "uninstaller": {
        "script": [
            "if (Test-Path \"$(appdir fiddler $global)\\current\\Fiddler.exe\") { ",
            "Get-ChildItem \"$(appdir fiddler $global)\\current\\Scripts\\*\" -Include 'ContentBlock.dll', 'ContentBlock.pdb' | Remove-Item -ErrorAction SilentlyContinue }",
            "if (Test-Path \"$(appdir fiddler $global)\\current\\persist\") { ",
            "Get-ChildItem \"$(appdir fiddler $global)\\current\\persist\\Scripts\\*\" -Include 'ContentBlock.dll', 'ContentBlock.pdb' | Remove-Item -ErrorAction SilentlyContinue }"
        ]
    }
}
