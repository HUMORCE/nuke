{
    "version": "nightly",
    "description": "Adds a PDF inspector that generates previews of PDF files.",
    "homepage": "https://www.telerik.com/fiddler/add-ons",
    "license": "MIT",
    "suggest": {
        "fiddler": "nuke/fiddler"
    },
    "url": "https://telerik-fiddler.s3.amazonaws.com/fiddler/addons/fiddlerpdfviewsetup.exe#dl.7z",
    "pre_install": "Remove-Item \"$dir\\`$PLUGINSDIR\", \"$dir\\*.nsis\" -Force -Recurse",
    "installer": {
        "script": [
            "if (Test-Path \"$(appdir fiddler $global)\\current\\Fiddler.exe\") { ",
            "Get-ChildItem \"$dir\\*\" -Include 'PDFView.dll', '_TelerikPDF.dll' | Copy-Item -Destination \"$(appdir fiddler $global)\\current\\Scripts\" -ErrorAction SilentlyContinue }",
            "if (Test-Path \"$(appdir fiddler $global)\\current\\persist\") { ",
            "Get-ChildItem \"$dir\\*\" -Include 'PDFView.dll', '_TelerikPDF.dll' | Copy-Item -Destination \"$(appdir fiddler $global)\\current\\persist\\Scripts\" -ErrorAction SilentlyContinue }"
        ]
    },
    "uninstaller": {
        "script": [
            "if (Test-Path \"$(appdir fiddler $global)\\current\\Fiddler.exe\") { ",
            "Get-ChildItem \"$(appdir fiddler $global)\\current\\Scripts\\*\" -Include 'PDFView.dll', '_TelerikPDF.dll' | Remove-Item -ErrorAction SilentlyContinue }",
            "if (Test-Path \"$(appdir fiddler $global)\\current\\persist\") { ",
            "Get-ChildItem \"$(appdir fiddler $global)\\current\\persist\\Scripts\\*\" -Include 'PDFView.dll', '_TelerikPDF.dll' | Remove-Item -ErrorAction SilentlyContinue }"
        ]
    }
}
