{
    "version": "nightly",
    "description": "Trivially spoof the responses to browsers' GeoLocation web service queries. (works with IE9+, FF4, Chrome and Opera)",
    "homepage": "https://www.telerik.com/fiddler/add-ons",
    "license": "MIT",
    "notes": "You must enable HTTPS decryption for this addon to work.",
    "suggest": {
        "fiddler": "nuke/fiddler"
    },
    "url": "https://telerik-fiddler.s3.amazonaws.com/fiddler/addons/fiddler-anywhere.zip",
    "extract_dir": "bin\\Release Signed",
    "installer": {
        "script": [
            "if (Test-Path \"$(appdir fiddler $global)\\current\\Fiddler.exe\") { ",
            "Get-ChildItem \"$dir\\*\" -Include 'AnyWhere.dll', 'AnyWhere.pdb' | Copy-Item -Destination \"$(appdir fiddler $global)\\current\\Scripts\" -ErrorAction SilentlyContinue }",
            "if (Test-Path \"$(appdir fiddler $global)\\current\\persist\") { ",
            "Get-ChildItem \"$dir\\*\" -Include 'AnyWhere.dll', 'AnyWhere.pdb' | Copy-Item -Destination \"$(appdir fiddler $global)\\current\\persist\\Scripts\" -ErrorAction SilentlyContinue }"
        ]
    },
    "uninstaller": {
        "script": [
            "if (Test-Path \"$(appdir fiddler $global)\\current\\Fiddler.exe\") { ",
            "Get-ChildItem \"$(appdir fiddler $global)\\current\\Scripts\\*\" -Include 'AnyWhere.dll', 'AnyWhere.pdb' | Remove-Item -ErrorAction SilentlyContinue }",
            "if (Test-Path \"$(appdir fiddler $global)\\current\\persist\") { ",
            "Get-ChildItem \"$(appdir fiddler $global)\\current\\persist\\Scripts\\*\" -Include 'AnyWhere.dll', 'AnyWhere.pdb' | Remove-Item -ErrorAction SilentlyContinue }"
        ]
    }
}
